rules_version = '2';

// Firebase Storage Security Rules for Shuffle Music Player
// This allows anyone to read files from the /music folder
// Perfect for a personal music player or public music library

service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to read music files
    match /music/{allPaths=**} {
      allow read: if true;
    }
    
    // Optionally, allow authenticated users to upload
    // Uncomment the line below if you want to upload via the app
    // match /music/{allPaths=**} {
    //   allow write: if request.auth != null;
    // }
  }
}
